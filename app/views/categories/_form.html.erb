<%= form_for @category, :html => {:class => "form-horizontal"} do |f| %>
  <% if category.errors.any? %>
    <div class="alert alert-danger">
      <%= pluralize(category.errors.count, "erro") %> proibindo isto de ser savlo:
      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, "Nome:", class: "col-md-1 control-label" %>
    <div class="col-md-5">
      <%= f.text_field :name, class: "form-control", maxlength: 100, minlength: 1 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
    
      <%= f.submit "Enviar", class: "btn btn-default btn-primary" %>  
    </div>
  </div>
 <% end %>